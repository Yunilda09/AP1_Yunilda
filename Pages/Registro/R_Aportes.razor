@page "/Aporte"
@page "/Aporte/{AporteId:int}"

@inject AportesBLL aportesBLL
 

<EditForm Model="aportes" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />

    <div class="card">
        <div class="card-header">
            <h3>Registro de Aportes</h3>
        </div>
        <div class="card-body">
          <div class="form-row aling-items-center">
              <div class="col">
                  <div class="form-group">
                      <div class="input-group" style="margin: 22px;">
                          <span class="input-group-text" style="background-color: #c5c5c550;witdth: 20%"> Aportes Id</span>
                             <InputNumber @bind-Value="aportes.AportesId" class="form-control col-4"/>
                                <div class="input-group-append">
                                    <button type="button" style="z-index: ;0" class="btn btn-primary input-group-text"
                                     @onclick= "Buscar"><span class="oi oi-
                                     magnifying-glass"></span></button>
                                </div>
                      </div>
                  </div>
              </div>
          </div>

             <div class="form-group">
                <label>Persona</label>
                <InputText @bind-Value="aportes.Persona" class="form-control" />
                <ValidationMessage For="@(() => aportes.Persona)" />
            </div>

             <div class="form-group">
                <label>Salario</label>
                <InputNumber @bind-Value="aportes.Salario" class="form-control" />
                <ValidationMessage For="@(() => aportes.Salario)" />
            </div>
        
        <div class="card-footer">
            <div class="form-group text-center" display: inline-block>
                <button type="button" class="btn btn-lg btn-primary" @onclick="Nuevo">Nuevo</button>
                <button type="submit" class="btn btn-lg btn-success">Guardar</button>
                <button type="button" class="btn btn-lg btn-danger" @onclick="Eliminar">Eliminar</button>
            </div>
        </div>
     </div>

    </div>
</EditForm>
@code {

    [Parameter]
    public int AporteId { get; set; }
    public Aportes aportes { get; set; } = new Aportes();

    protected override void OnInitialized()
    {
        if (AporteId >0)
        Buscar();
    }

    private void Nuevo()
    {
        aportes = new Aportes();
    }

    private void Buscar()
    {
        if (aportes.AportesId > 0)
        {
            var encontrado = aportesBLL.Buscar(aportes.AportesId);
            Nuevo();
            if (encontrado != null)
                this.aportes = encontrado;
            else
            {
                {}
            }

        }
    }

    public void Guardar()
    {
        var guardado = aportesBLL.Guardar(aportes);

        if (guardado)
        {
            Nuevo();
        }
        else
        {
            {}
        }

    }

    public void Eliminar()
    {
        bool eliminado;

        eliminado = aportesBLL.Eliminar(aportes.AportesId);

        if (eliminado)
        {
            Nuevo();
        }
        else
        {
           {}
        }

    }

}
